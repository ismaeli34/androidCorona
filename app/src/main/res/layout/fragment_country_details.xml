        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp"
            android:layout_height="450dp">
            
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:id="@+id/imageFlag"
                    android:padding="5dp"

                    android:layout_width="80dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:text="India"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tvCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

            <View
                android:layout_marginTop="40dp"
                android:background="@color/colorGrey6"
                android:layout_height="2dp"
                android:layout_width="match_parent"
                >

            </View>

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <View

                            android:background="@drawable/rounded_corner_yellow"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>

                        <LinearLayout
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:id="@+id/totalIcon"
                                android:src="@drawable/world"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></ImageView>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="TOTAL CASES"
                                    android:textColor="@color/cases"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>




                                <TextView
                                    android:id="@+id/tvCases"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="731.9k Total"
                                    android:textColor="@color/colorGrey1"></TextView>

                            </LinearLayout>






                        </LinearLayout>









                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <View

                            android:background="@drawable/rounded_corner_red"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>

                        <LinearLayout
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:id="@+id/deathIcon"
                                android:src="@drawable/death_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></ImageView>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="DEATHS"
                                    android:textColor="@color/death"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>


                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="+"
                                        android:textColor="@color/death"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/todayDeaths"
                                        android:text="3,057"
                                        android:textColor="@color/death"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:text=" Today"
                                        android:textColor="@color/death"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                    </TextView>

                                </LinearLayout>

                                <TextView
                                    android:text="731.9k Total"
                                    android:id="@+id/tvDeath"
                                    android:textColor="@color/colorGrey1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>

                            </LinearLayout>






                        </LinearLayout>









                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <View

                            android:background="@drawable/rounded_corner_green"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>

                        <LinearLayout
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:id="@+id/recoveredIcon"
                                android:src="@drawable/recovered_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></ImageView>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="RECOVERED"
                                    android:textColor="@color/recovered"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>



                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="+"
                                        android:textColor="@color/recovered"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/todayRecovered"
                                        android:text="3,057"
                                        android:textColor="@color/recovered"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:text=" Today"
                                        android:textColor="@color/recovered"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                    </TextView>

                                </LinearLayout>




                                <TextView
                                    android:text="12.8 M Total"
                                    android:id="@+id/tvRecovered"
                                    android:textColor="@color/colorGrey1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>

                            </LinearLayout>






                        </LinearLayout>









                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <View

                            android:background="@drawable/rounded_corner_blue"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>

                        <LinearLayout
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:id="@+id/activeIcon"
                                android:src="@drawable/active_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></ImageView>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="ACTIVE"
                                    android:textColor="@color/active"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="+"
                                        android:textColor="@color/active"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/tvTodayCases"
                                        android:text="3,057"
                                        android:textColor="@color/active"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:text=" Today"
                                        android:textColor="@color/active"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                    </TextView>

                                </LinearLayout>




                                <TextView
                                    android:text="12.8 M Total"
                                    android:id="@+id/tvActive"
                                    android:textColor="@color/colorGrey1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></TextView>

                            </LinearLayout>






                        </LinearLayout>









                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>




        </androidx.cardview.widget.CardView>





</LinearLayout>