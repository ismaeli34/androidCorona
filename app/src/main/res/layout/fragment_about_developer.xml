<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.aboutDeveloper.AboutDeveloper">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:text="@string/title_developer" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="5dp"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/circular_bordershape"
                android:id="@+id/imageProfile"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvDeveloperName"
                    android:text="Ronney Ismael"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/tvOccupation"
                    android:layout_marginLeft="5dp"
                    android:text="Hochschule Schmalkalden"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorGrey1"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                </TextView>



                <TextView
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:id="@+id/tvAddress"
                    android:text="Schmalkalden,Germany"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="15dp"
        android:layout_height="100dp">

        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Contact with me"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

 <LinearLayout
     android:orientation="horizontal"
     android:layout_marginTop="20dp"
     android:weightSum="3"
     android:layout_width="match_parent"
     android:layout_height="match_parent">


     <ImageView
         android:id="@+id/imageEMail"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_email_black_24dp" />

     <TextView
         android:id="@+id/tvEmail"
         android:layout_weight="2"
         android:text="ronneyismael@gmail.com"
         android:layout_width="0dp"
         android:layout_height="wrap_content"></TextView>



 </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageGithub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/github_logo" />

            <TextView
                android:id="@+id/tvGithub"
                android:layout_weight="2"
                android:text="https://github.com/ismaeli34"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></TextView>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/love"
            android:background="@drawable/covid"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        
        <TextView
            android:id="@+id/tvmade"
            android:text="Wear Mask,  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>



        <TextView
            android:text="Save Life "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="COVID-19 TRACKER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>




    </LinearLayout>




</LinearLayout>